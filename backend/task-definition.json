{
  "family": "order-management-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::944473419677:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::944473419677:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "order-management-backend",
      "image": "944473419677.dkr.ecr.us-east-1.amazonaws.com/order-management-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 9242,
          "protocol": "tcp"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:9242/actuator/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/order-management-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        }
      ]
    }
  ]
}