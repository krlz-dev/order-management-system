{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "target/**"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "coverage/**",
        "test-results/**",
        "target/surefire-reports/**"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".eslintrc*", "*.config.js"]
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$", ".prettierrc*", "*.config.js"],
      "outputs": []
    },
    "format:check": {
      "inputs": ["$TURBO_DEFAULT$", ".prettierrc*", "*.config.js"],
      "outputs": []
    },
    "backend:build": {
      "inputs": ["backend/**", "!backend/target/**", "!backend/.idea/**"]
    },
    "backend:test": {
      "inputs": ["backend/**", "!backend/target/**", "!backend/.idea/**"]
    },
    "frontend:build": {
      "inputs": ["frontend/**", "!frontend/node_modules/**", "!frontend/.next/**"]
    },
    "frontend:test": {
      "inputs": ["frontend/**", "!frontend/node_modules/**", "!frontend/.next/**"]
    },
    "frontend:lint": {
      "inputs": ["frontend/**", "!frontend/node_modules/**", "!frontend/.next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false,
      "inputs": [],
      "outputs": []
    }
  },
  "globalDependencies": [
    "**/.env*",
    "tsconfig.json",
    "package.json"
  ]
}